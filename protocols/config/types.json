{
  "types": {
    "ip_address": {
      "format": "ip",
      "description": "Converts decimal number to IP address",
      "steps": [
        {
          "operation": "split",
          "bits": [24, 16, 8, 0],
          "mask": 255
        },
        {
          "operation": "join",
          "separator": "."
        }
      ]
    },
    "mac_address": {
      "format": "mac",
      "description": "Converts decimal number to MAC address",
      "steps": [
        {
          "operation": "split",
          "bits": [40, 32, 24, 16, 8, 0],
          "mask": 255,
          "format": "hex",
          "padding": 2
        },
        {
          "operation": "join",
          "separator": ":"
        }
      ]
    },
    "binary": {
      "format": "bin",
      "description": "Converts decimal number to binary",
      "steps": [
        {
          "operation": "format",
          "base": 2,
          "prefix": "0b"
        }
      ]
    },
    "hex_bytes": {
      "format": "hex",
      "description": "Converts decimal number to hexadecimal bytes",
      "steps": [
        {
          "operation": "split",
          "bytes": 2,
          "format": "hex",
          "padding": 2
        },
        {
          "operation": "join",
          "separator": " "
        }
      ]
    }
  }
}